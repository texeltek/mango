<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>mango</groupId>
    <artifactId>parent</artifactId>
    <version>1.0.4-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <activemq.version>5.3.0</activemq.version>
        <commons.net.version>3.0.1</commons.net.version>
        <accumulo.version>1.4.1</accumulo.version>
        <distribution.repo.id>texeltek</distribution.repo.id>
        <distribution.releases>http://192.168.20.249:8888/nexus/content/repositories/tt</distribution.releases>
        <distribution.snap.id>texeltek</distribution.snap.id>
        <distribution.snapshots>http://192.168.20.249:8888/nexus/content/repositories/tt-snapshots
        </distribution.snapshots>
        <guava.version>13.0.1</guava.version>
        <hadoop.version>0.20.2</hadoop.version>
        <javax.jms.version>1.1</javax.jms.version>
        <junit.version>4.8.1</junit.version>
        <mockito.version>1.9.0</mockito.version>
        <powermock-module-junit4.version>1.4.9</powermock-module-junit4.version>
        <slf4j.version>1.6.1</slf4j.version>
        <spring.version>3.0.5.RELEASE</spring.version>
    </properties>

    <modules>
        <module>accumulo</module>
        <module>collect</module>
        <module>jms</module>
        <module>types</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>${slf4j.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-jms</artifactId>
                <version>${spring.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.activemq</groupId>
                <artifactId>activemq-core</artifactId>
                <version>${activemq.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${guava.version}</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit-dep</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>${mockito.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>javax.jms</groupId>
                <artifactId>jms</artifactId>
                <version>${javax.jms.version}</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
            </dependency>
            <dependency>
                <groupId>commons-net</groupId>
                <artifactId>commons-net</artifactId>
                <version>${commons.net.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.accumulo</groupId>
                <artifactId>accumulo-core</artifactId>
                <version>${accumulo.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.hadoop</groupId>
                <artifactId>hadoop-core</artifactId>
                <version>${hadoop.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <distributionManagement>
        <repository>
            <id>${distribution.repo.id}</id>
            <name>Release distribution</name>
            <uniqueVersion>false</uniqueVersion>
            <url>${distribution.releases}
            </url>
        </repository>
        <snapshotRepository>
            <id>${distribution.snap.id}</id>
            <name>Snapshot distribution</name>
            <uniqueVersion>false</uniqueVersion>
            <url>${distribution.snapshots}</url>
        </snapshotRepository>
    </distributionManagement>
    <scm>
        <connection>scm:git:git@github.com:texeltek/mango.git</connection>
        <developerConnection>scm:git:git@github.com:texeltek/mango.git</developerConnection>
        <url>scm:git:git@github.com:texeltek/mango.git</url>
    </scm>
    <repositories>
        <repository>
            <id>repository.jboss.org-public</id>
            <name>JBoss.org Maven repository</name>
            <url>https://repository.jboss.org/nexus/content/groups/public</url>
        </repository>
    </repositories>
</project>
